#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

set -vx

if [ -v DATABASE_URL ]; then
  echo "[specified config]"
  bundle exec rake test
else
  echo "[mysql]"
  DATABASE_URL="mysql2://root@127.0.0.1/fresh_connection_test_master" \
    DATABASE_REPLICA1_URL="mysql2://root@127.0.0.1/fresh_connection_test_replica1" \
    DATABASE_REPLICA2_URL="mysql2://root@127.0.0.1/fresh_connection_test_replica2" \
    DATABASE_FAKE_REPLICA_URL="mysql2://root@127.0.0.1/fresh_connection_test_master" \
    bundle exec rake test

  echo "[postgresql]"
  DATABASE_URL="postgresql://postgres:postgres@127.0.0.1/fresh_connection_test_master" \
    DATABASE_REPLICA1_URL="postgresql://postgres:postgres@127.0.0.1/fresh_connection_test_replica1" \
    DATABASE_REPLICA2_URL="postgresql://postgres:postgres@127.0.0.1/fresh_connection_test_replica2" \
    DATABASE_FAKE_REPLICA_URL="postgresql://postgres:postgres@127.0.0.1/fresh_connection_test_master" \
    bundle exec rake test
fi
